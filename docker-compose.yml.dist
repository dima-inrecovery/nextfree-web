version: '3'

services:

  proxy:
    image: jwilder/nginx-proxy:alpine
    restart: unless-stopped
    environment:
      - HTTPS_METHOD=nohttps
    ports:
      - '80:80'
#      - '443:443'
    networks:
      - backend
    volumes:
      - '/var/run/docker.sock:/tmp/docker.sock:ro'
#      - '/etc/letsencrypt/live/nextfree.cf/fullchain.pem:/etc/nginx/certs/nextfree.cf.crt'
#      - '/etc/letsencrypt/live/nextfree.cf/privkey.pem:/etc/nginx/certs/nextfree.cf.key'
#      - '/etc/letsencrypt/live/customer.nextfree.cf/fullchain.pem:/etc/nginx/certs/customer.nextfree.cf.crt'
#      - '/etc/letsencrypt/live/customer.nextfree.cf/privkey.pem:/etc/nginx/certs/customer.nextfree.cf.key'
#      - '/etc/letsencrypt/live/owner.nextfree.cf/fullchain.pem:/etc/nginx/certs/owner.nextfree.cf.crt'
#      - '/etc/letsencrypt/live/owner.nextfree.cf/privkey.pem:/etc/nginx/certs/owner.nextfree.cf.key'
#      - '/etc/letsencrypt/live/api.nextfree.cf/fullchain.pem:/etc/nginx/certs/api.nextfree.cf.crt'
#      - '/etc/letsencrypt/live/api.nextfree.cf/privkey.pem:/etc/nginx/certs/api.nextfree.cf.key'
#      - '/etc/letsencrypt/live/admin.nextfree.cf/fullchain.pem:/etc/nginx/certs/admin.nextfree.cf.crt'
#      - '/etc/letsencrypt/live/admin.nextfree.cf/privkey.pem:/etc/nginx/certs/admin.nextfree.cf.key'

  www:
    build: ./www/env
    restart: unless-stopped
    environment:
      - HTTPS_METHOD=nohttps
      - VIRTUAL_HOST=nextfree.cf,www.nextfree.cf
    networks:
      - backend
    volumes:
      - './www:/var/www'

  api:
    build: ./api/env
    restart: unless-stopped
    environment:
      - HTTPS_METHOD=nohttps
      - VIRTUAL_HOST=api.nextfree.cf
    networks:
      - backend
    volumes:
      - './api:/var/www'

  admin:
    build: ./admin/env
    restart: unless-stopped
    environment:
      - HTTPS_METHOD=nohttps
      - VIRTUAL_HOST=admin.nextfree.cf
    networks:
      - backend
    volumes:
      - './admin:/var/www'

  staff:
    build: ./staff/env
    restart: unless-stopped
    environment:
      - HTTPS_METHOD=nohttps
      - VIRTUAL_HOST=staff.nextfree.cf
    networks:
      - backend
    volumes:
      - './staff:/var/www'

  customer:
    build: ./customer/env
    restart: unless-stopped
    environment:
      - HTTPS_METHOD=nohttps
      - VIRTUAL_HOST=customer.nextfree.cf
    networks:
      - backend
    volumes:
      - './customer:/var/www'

  owner:
    build: ./owner/env
    restart: unless-stopped
    environment:
      - HTTPS_METHOD=nohttps
      - VIRTUAL_HOST=owner.nextfree.cf
    networks:
      - backend
    volumes:
      - './owner:/var/www'

  db:
    image: mongo:4
    restart: unless-stopped
    environment:
      - MONGO_INITDB_DATABASE=nextfree
    networks:
      - backend
    volumes:
      - '.persistency/mongo/data:/data/db'

networks:
  backend:
    driver: "bridge"
